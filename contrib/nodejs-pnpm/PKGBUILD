_npmname=pnpm
_npmver=0.70.1
pkgname=nodejs-pnpm
pkgver=0.70.1
pkgrel=1
pkgdesc="Performant npm installations"
arch=(any)
url='https://github.com/rstacruz/pnpm'
license=('MIT')
depends=('nodejs')
makedepends=('npm')
source=(http://registry.npmjs.org/$_npmname/-/$_npmname-$_npmver.tgz)
noextract=($_npmname-$_npmver.tgz)
sha512sums=('719b98319d472b9da5c82464ca8940d865ae3797ff8a52988df264282f2a4cb0075d77d999987a924c003b8f1ceecc6ae9032ee8eeeeeaa43744473f87478151')

package() {
  cd $srcdir
  local _npmdir="$pkgdir/usr/lib/node_modules/"
  mkdir -p $_npmdir
  cd $_npmdir
  npm install -g --prefix "$pkgdir/usr" $_npmname@$_npmver
}

